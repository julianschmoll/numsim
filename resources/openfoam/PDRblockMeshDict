FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      PDRblockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1.0;

x
{
    points  (0 $physicalSizeX);
    nCells  ($nCellsX);
    ratios  (1);
}

y
{
    points  (0 $physicalSizeY);
    nCells  ($nCellsY);
    ratios  (1);
}

z
{
    points  (0 0.1);
    nCells  (1);
    ratios  (1);
}


boundary
(
    left
    {
        type  wall;
        faces (0);
    }
    right
    {
        type  wall;
        faces (1);
    }
    bottom
    {
        type  wall;
        faces (2);
    }
    top
    {
        type  wall;
        faces (3);
    }
    frontAndBack
    {
        type  empty;
        faces (4 5);
    }
);

