FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      PDRblockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   0.1;

x
{
    points  (0 1);
    nCells  (20);
    ratios  (1);
}

y
{
    points  (0 1);
    nCells  (20);
    ratios  (1);
}

z
{
    points  (0 0.1);
    nCells  (1);
    ratios  (1);
}


boundary
(
    left
    {
        type  wall;
        faces (0); // Min X
    }
    right
    {
        type  wall;
        faces (1); // Max X
    }
    bottom
    {
        type  wall;
        faces (2); // Min Y
    }
    top
    {
        type  wall;
        faces (3); // Max Y
    }
    frontAndBack
    {
        type  empty;
        faces (4 5); // Z-directions (for 2D)
    }
);


