FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1.0;

vertices
(
    (0 0 0)                          // 0
    ($physicalSizeX 0 0)             // 1
    ($physicalSizeX $physicalSizeY 0)// 2
    (0 $physicalSizeY 0)             // 3
    (0 0 0.1)                        // 4
    ($physicalSizeX 0 0.1)           // 5
    ($physicalSizeX $physicalSizeY 0.1) // 6
    (0 $physicalSizeY 0.1)           // 7
);

blocks
(
    // nCellsX and nCellsY used here for resolution
    hex (0 1 2 3 4 5 6 7) ($nCellsX $nCellsY 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    top
    {
        type wall;
        faces
        (
            (3 7 6 2)
        );
    }
    bottom
    {
        type wall;
        faces
        (
            (1 5 4 0)
        );
    }
    left
    {
        type wall;
        faces
        (
            (0 4 7 3)
        );
    }
    right
    {
        type wall;
        faces
        (
            (2 6 5 1)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

